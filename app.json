{
  "expo": {
    "name": "Alhafidh",
    "slug": "Alhafidh",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "description": "Cross platform mobile app using React Native, to calculate and track Qur'an memorization. It helps to memorize more and more quickly the text and revise it differently depending on whether the memorized pages are in short-term or long-term memory.",
    "githubUrl": "https://github.com/hadi4172/alhafidh-mobile"
  }
}
